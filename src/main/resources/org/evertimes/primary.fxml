<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.evertimes.PrimaryController">

    <children>
        <Canvas fx:id="canvasOne" height="500.0" onMousePressed="#pressCell" width="500.0"/>
        <VBox spacing="20">
            <ComboBox fx:id="typeBox"/>
            <ComboBox fx:id="directionBox"/>
            <TextField fx:id="cordBox"/>
            <Button onAction="#addShip" text="Добавить корабль"/>
            <Button onAction="#checkButton" text="Проверка"/>
            <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View"/>
            <Button onAction="#generateRandom" text="Сгенерировать случайно"/>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</HBox>
